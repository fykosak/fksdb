{layout './orgDetail.latte'}
{varType FKSDB\Models\ORM\Models\Fyziklani\TeamModel2 $model}
{default bool $isOrganizer = true}

{block outerContent}
    {include codeTransition from '../AbstractApplication/blocks.latte',isOrganizer:true }
    {include rests from '../AbstractApplication/blocks.latte'}
    <div class="panel color-auto">
        <div class="container">
            <h2>{_'Info'}</h2>
            {control columnTable [
            'fyziklani_team.fyziklani_team_id',
            'fyziklani_team.name',
            'fyziklani_team.phone',
            'fyziklani_team.note',
            'fyziklani_team.password',
            'fyziklani_team.category',
            'fyziklani_team.created',
            'fyziklani_team.game_lang',
            'fyziklani_team.force_a',
            'fyziklani_team.scholarship',
            ],$model,1024}
        </div>
    </div>
    {include rank from './detail.latte', model:$model}
        <div class="panel color-auto">
            <div class="container">
                {control schoolCheck}
            </div>
        </div>
    {var $teacherCounter = 0;}
    {foreach $model->getTeachers() as $teacher}
        {varType FKSDB\Models\ORM\Models\Fyziklani\TeamTeacherModel $teacher}
        <div class="panel color-auto">
            <div class="container">
                {php $teacherCounter++}

                <h2>{FKSDB\Components\EntityForms\Fyziklani\FOFTeamForm::formatTeacherLabel($teacherCounter,$teacher)}</h2>
                     <a
                        class="btn btn-secondary btn-sm"
                        href="{plink :Organizer:Person:detail id=>$teacher->person_id,contestId=>$teacher->fyziklani_team->event->event_type->contest_id}"
                >{_'button.person.detail'}</a>
                {include personSchedule from './detail.latte', person => $teacher->person}
            </div>
        </div>
    {/foreach}
    {include members from './orgDetail.latte', model:$model,}
    <div class="panel color-auto">
        <div class="container">
            <h2>{_'Seating'}</h2>
            {control seating}
        </div>
    </div>
    {include tests from './orgDetail.latte', model:$model}
    <div class="panel color-auto">
        <div class="container">
            <h2>{_'Notes'}</h2>
            {control noteForm}
        </div>
    </div>
{/block}
