{layout '../@layout.latte'}
{varType FKSDB\Model\UI\PageStyleContainer $pageStyleContainer}
{block nav}{/block}{*nav is emepty*}
{block main}
    <main class="{$pageStyleContainer->getMainContainerClassName()}">
        <div class="login-form-container card">
            <div class="row mx-3" style="height:7rem">
                <img class="col-6" src="/images/contests/fykos-gray.svg" alt="fykos"/>
                <img class="col-6" src="/images/contests/vyfuk-gray.svg" alt="vyfuk"/>
            </div>
            <div class="card-body pt-0">
                <h2 class="card-title text-center text-muted">{_'FKSDB'}</h2>
                {block flashes}
                    <div n:foreach="$flashes as $flash" class="alert alert-{$flash->type}">{$flash->message}</div>
                {/block}
                {include #form}
                <div class="text-center">{control languageChooser}</div>
            </div>
        </div>
    </main>
{/block}
