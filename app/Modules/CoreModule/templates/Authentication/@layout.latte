{layout '../@layout.latte'}
{block nav}{/block}{*nav is emepty*}
{varType FKSDB\Models\UI\PageStyleContainer $pageStyleContainer}
{block main}
    <main class="{$pageStyleContainer->getMainContainerClassName()}">
        <div class="login-form-container card">
            <div class="row mx-3" style="height:7rem">
                <img class="col-6" src="{$basePath}/images/contests/fykos-gray.svg" alt="fykos"/>
                <img class="col-6" src="{$basePath}/images/contests/vyfuk-gray.svg" alt="vyfuk"/>
            </div>
            <div class="card-body pt-0">
                <div class="text-center">
                    <img src="{$basePath}/images/logo/gray.svg" width="75%" alt="FKSDB"/>
                </div>
                {block flashes}
                    <div n:foreach="$flashes as $flash" class="alert alert-{$flash->type}">{$flash->message}</div>
                {/block}
                {include form}
                <div class="text-center">{control languageChooser}</div>
            </div>
        </div>
    </main>
{/block}
