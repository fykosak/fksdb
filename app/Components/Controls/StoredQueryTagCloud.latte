<p class="storedQueryTags">
{var $isListMode = ($mode == $control::MODE_LIST)}
{foreach $tags as $tag}
    {var $active = ($isListMode && array_key_exists($tag->tag_type_id, $activeTagIds))?'storedQueryTag-active':''}
    <a n:tag-if="$isListMode" href="{link onClick! $nextActiveTagIds[$tag->tag_type_id]}">
        <span class="label badge storedQueryTag storedQueryTag-{$tag->color} {$active}" title="{$tag->description}">{$tag->name}</span>
    </a>
{/foreach}
</p>
