{layout '../@layout.latte'}
{block content}
    {if count($models)}
        {foreach $models as $model}
            <h3 class="card-header">
                {control valuePrinter:onlyValue $itemHeadline[0].'.'.$itemHeadline[1], $model}
                <div class="btn-group float-right" role="group" aria-label="Basic example" class="">
                    {foreach $links as $linkFactory}
                        {($linkFactory)($model)}
                    {/foreach}
                </div>
            </h3>
            <ul class="list-group list-group-flush">
                {foreach $rows as $field}
                    {control valuePrinter:listItem $field[0].'.'.$field[1], $model}
                {/foreach}
            </ul>
        {/foreach}
    {else}
        <div class="card-body">
            {control noRecords}
        </div>
    {/if}
{/block}
