<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#categoryA" role="tab" aria-controls="home"
           aria-selected="true">{\sprintf(_('Category %s'),'A')}</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#categoryB" role="tab" aria-controls="profile"
           aria-selected="false">{\sprintf(_('Category %s'),'B')}</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#categoryC" role="tab" aria-controls="contact"
