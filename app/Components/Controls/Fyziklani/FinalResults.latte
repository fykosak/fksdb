            <p class="alert-warning alert">{_('Kategoria nieje uzatvorená')}</p>
        {/if}
    </div>
    <div class="tab-pane fade" id="categoryB" role="tabpanel" aria-labelledby="profile-tab">
        <h2>{\sprintf(_('Category %s'),'B')}</h2>
        {if $that->isClosedCategory('B')}
            {control resultsCategoryBGrid}
        {else}
            <p class="alert-warning alert">{_('Kategoria nieje uzatvorená')}</p>
        {/if}
    </div>
    <div class="tab-pane fade" id="categoryC" role="tabpanel" aria-labelledby="contact-tab">
        <h2>{\sprintf(_('Category %s'),'C')}</h2>
        {if $that->isClosedCategory('C')}
            {control resultsCategoryCGrid}
        {else}
            <p class="alert-warning alert">{_('Kategoria nieje uzatvorená')}</p>
        {/if}
    </div>
