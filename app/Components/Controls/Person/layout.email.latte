{varType bool $changeActive}
{varType FKSDB\Modules\Core\Language $lang}
{block content}
    {if $changeActive}
        <p class="alert alert-info">{_'Changing in progress, please check yout email and confirm you new mail.'}</p>
    {else}
        <p class="alert alert-info">
            {switch $lang->value}
                {cache 'cs'}{/cache}
                {cache 'en'}{/cache}
            {/switch}
        </p>
        {control form}
    {/if}

{/block}
