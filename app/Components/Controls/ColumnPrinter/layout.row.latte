{varType Fykosak\NetteORM\Model $model}
{varType int $userPermission}
{varType string $name}
<div class="row">
    <b class="col-xl-2 col-lg-4 col-md-5 col-sm-6">
        {control $control:templateString '@' . $name . ':title',$model,$userPermission}
    </b>
    <span class="col-xl-10 col-lg-8 col-md-7 col-sm-6">
        {control $control:templateString '@' . $name . ':value',$model,$userPermission}
    </span>
</div>
