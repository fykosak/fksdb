parameters:
    events:
        soustredeni:
            appCond: or(regOpen(), role('admin'))
            requiredCond: or(and(neg(role('admin')),or(state('applied'),state('interested'))), state('participated')) # povinné pro účastníka nebo pro všechny, když jsou účastnivší se
            person:
                person:
                    other_name:
                        required: true
                    family_name:
                        required: true
                person_info:
                    born_id:
                        required: %events.soustredeni.requiredCond%
                        description: "Kvůli pojišťovně."
                    birthplace:
                        required: state('participated')
                    phone:
                        required: %events.soustredeni.requiredCond%
                        description: "Telefon (i s předvolbou státu), jenž budeš mít s sebou."
                post_contact_p:
                    address:
                        required: %events.soustredeni.requiredCond%
                person_history:
                    school_id:
                        required: state('participated')
                        description: "Pokud nelze školu nalézt, napiš správci."
            tshirt:
                M_S: S pánské
                M_M: M pánské
                M_L: L pánské
                M_XL: XL pánské
                M_XXL: XXL pánské
                F_S: S dámské
                F_M: M dámské
                F_L: L dámské
                F_XL: XL dámské


events:
    soustredeni:
        event_type_id: [4, 5] # jarní i podzimní sous. nejsou různá
        #eventYears: [1,2,3,4] # specify for which years this machine is valid, by default all years
        formLayout: soustredeni.form
        paramScheme:
            notifyBcc:
                default: soustredeni@fykos.cz
            notifyFrom:
                default: soustredeni@fykos.cz
            deadline1:
                default: 1970-01-01 00:00:00
            deadline2:
                default: 1970-01-01 00:00:00
            deadline3:
                default: 1970-01-01 00:00:00
            deadline4:
                default: 1970-01-01 00:00:00
            letterWhere:
                default: nikde
            letterSignature:
                default: Student Pilný
            letterResolutionTime:
                default: až naprší a uschne


        baseMachines:
            PARTICIPANT:
                service: @orm.event_participant.service

                states: %events.defaultSous.states%

                transitions:
                    __init->invited:
                        condition: role('admin')
                        label: _('Pozvat účastníka')
                        onExecuted:
                            - FKSDB\Models\Events\Transitions\MailSender(sous/invited, .self)
                    auto.invited->invited: # this must be duplicate of __init->invited
                        condition: role('admin')
                        label: _('Pozvat účastníka')
                        onExecuted:
                            - FKSDB\Models\Events\Transitions\MailSender(sous/invited, .self)
                    __init->spare:
                        condition: role('admin')
                        label: _('Pozvat náhradníka')
                        onExecuted:
                            - FKSDB\Models\Events\Transitions\MailSender(sous/spare, .self)
                    auto.spare->spare: # this must be duplicate of __init->spare
                        condition: role('admin')
                        label: _('Pozvat náhradníka')
                        onExecuted:
                            - FKSDB\Models\Events\Transitions\MailSender(sous/spare, .self)
                    invited|invited1|invited2|invited3->applied:
                        condition: or(before(param('deadline1')),role('admin'))
                        label: _('Potrvrdit učast')
                    spare|spare1|spare2|spare3->interested:
                        condition: before(param('deadline1'))
                        label: _('Chci jet')
                    invited|invited1|invited2|invited3->rejected:
                        condition: or(before(param('deadline1')),role('admin'))
                        label: _('Odmítnout účast')
                        behaviorType: danger

                    spare->spare1:
                        condition: and(after(param('deadline2')),role('admin'))
                        label: _('Poslat I. upomínku')
                        onExecuted:
                            - FKSDB\Models\Events\Transitions\MailSender(sous/spare1, self)
                    invited->invited1:
                        condition: and(after(param('deadline2')),role('admin'))
                        label: _('Poslat I. upomínku')
                        onExecuted:
                            - FKSDB\Models\Events\Transitions\MailSender(sous/invited1, self)
                    spare1->spare2:
                        condition: and(after(param('deadline3')),role('admin'))
                        label: _('Poslat II. upomínku')
                        onExecuted:
                            - FKSDB\Models\Events\Transitions\MailSender(sous/spare2, self)
                    invited1->invited2:
                        condition: and(after(param('deadline3')),role('admin'))
                        label: _('Poslat II. upomínku')
                        onExecuted:
                            - FKSDB\Models\Events\Transitions\MailSender(sous/invited2, self)
                    spare2->spare3:
                        condition: and(after(param('deadline4')),role('admin'))
                        label: _('Poslat last call')
                        onExecuted:
                            - FKSDB\Models\Events\Transitions\MailSender(sous/spare3, self)
                    invited2->invited3:
                        condition: and(after(param('deadline4')),role('admin'))
                        label: _('Poslat last call')
                        onExecuted:
                            - FKSDB\Models\Events\Transitions\MailSender(sous/invited3, self)
                    spare|spare1|spare2|spare3->rejected:
                        condition: or(before(param('deadline1')),role('admin'))
                        label: _('Odmítnout účast')
                        behaviorType: danger
                    interested->applied:
                        condition: role('admin')
                        label: _('Schválit jako účastníka')
                    spare->invited:
                        condition: role('admin')
                        label: _('Pozvat jako účastníka')
                    spare1->invited1:
                        condition: role('admin')
                        label: _('Pozvat jako účastníka')
                    spare2->invited2:
                        condition: role('admin')
                        label: _('Pozvat jako účastníka')
                    spare3->invited3:
                        condition: role('admin')
                        label: _('Pozvat jako účastníka')
                    applied->participated:
                        condition: and(role('admin'),eventWas())
                        label: _('Zúčastnil se')
                    applied->missed:
                        condition: and(role('admin'),eventWas())
                        label: _('Nepřijel')

                    invited|invited1|invited2|invited3|auto.invited|spare|spare1|spare2|spare3|auto.spare|applied|interested->cancelled:
                        condition: role('admin')
                        label: _('Zrušit přihlášku')
                    invited|invited1|invited2|invited3|spare|spare1|spare2|spare3|applied|interested->out_of_db:
                        condition: role('admin')
                        label: _('Řešit mimo FKSDB')
                    out_of_db->invited:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako "Pozvaný"')
                    out_of_db->invited1:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako "Pozvaný I.upomínka"')
                    out_of_db->invited2:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako "Pozvaný II.upomínka"')
                    out_of_db->invited3:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako Pozvaný last call')
                    out_of_db->auto.invited:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako Pozvaný (auto)')
                    out_of_db->spare:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako Náhradník')
                    out_of_db->spare1:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako Nahradník I.upomínka')
                    out_of_db->spare2:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako Nahradník II.upomínka')
                    out_of_db->spare3:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako Nahradník last call')
                    out_of_db->auto.spare:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako Náhradník (auto)')
                    out_of_db->applied:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako Účastní se')
                    out_of_db->interested:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako Chce jet')
                    out_of_db->participated:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako Účastnil se')
                    out_of_db->rejected:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako Odmítl')
                    out_of_db->missed:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako Nepřijel')
                    out_of_db->cancelled:
                        condition: role('admin')
                        label: _('Vrátit zpět do DB jako Zrušen')

                    cancelled->__terminated:
                        condition: role('admin')
                        label: _('Smazat přihlášku')

                fields:
                    person_id:
                        label: _('Person')
                        required: true
                        modifiable: %events.soustredeni.appCond%
                        default: null
                        factory: RefPerson(%events.soustredeni.person%, email, role('admin'), role('admin'), false)
                    diet:
                        label: _('Jídlo')
                        description: "Máš nějaké speciální stravovací návyky – vegetariánství, veganství, diety, …? Pokud ano, máš zájem o speciální stravu nebo si (zejména v případě veganů) dovezeš jídlo vlastní?"
                    health_restrictions:
                        label: _('Zdravotní omezení')
                        description: "Máš nějaká zdravotní omezení, která by tě mohla omezovat v pobytu na soustředění nebo kvůli kterým by ses např. nemohl/a účastnit fyzicky náročných nebo nočních her? Například různé alergie (a jejich projevy), cukrovka, epilepsie, dlouhodobější obtíže, … Bereš nějaké léky, ať už pravidelně, nebo v případě obtíží? Jaké to jsou? Jsou nějaké další informace ohledně tvého zdravotního stavu, co bychom měli vědět?"
                    tshirt_size:
                        label: _('Jaké triko nosíš?')
                        required: %events.soustredeni.requiredCond%
                        factory: Chooser("Zvolit velikost", Options(%events.soustredeni.tshirt%))
                    price:
                        label: _('Cena soustředění (CZK)')
                        modifiable: false
                        description: "Cena v spočtená dle pravidel (http://fykos.cz/sous_cena)."


        #
        #   MACHINE
        #   explanation: machine consists of several instances of base machines
        #
        machine:
            baseMachines:
                participant:
                    bmName: PARTICIPANT
                    label: _('Účastník')
                    required: true # default false, it's conjuction with fields requirement
                    primary: true # base machine states are propagated to the machine
                    modifiable: or(neg(or(state('participated'),state('missed'),state('rejected'))),role('admin'))
            formAdjustments:
                - FKSDB\Models\Events\FormAdjustments\UniqueCheck('participant.person_id', "Zvolená osoba je již přihlášená.")
                - @events.privacyPolicy

            processings:
                - @events.privacyPolicy
